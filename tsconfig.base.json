{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@publishing/*": ["apps/publishing/*"],
      // "@pnt-tms-partners/config": ["libs/config/src/index.ts"],
      "@pnt-tms-partners/config/*": ["libs/config/src/*"],
      // "@pnt-tms-partners/types": ["libs/types/src/index.ts"],
      "@pnt-tms-partners/types/*": ["libs/types/src/*"],
      // "@pnt-tms-partners/ui": ["libs/ui/src/index.ts"],
      "@pnt-tms-partners/ui/*": ["libs/ui/src/*"],
      // "@pnt-tms-partners/utils": ["libs/utils/src/index.ts"],
      "@pnt-tms-partners/utils/*": ["libs/utils/src/*"]
    }
  }
}
